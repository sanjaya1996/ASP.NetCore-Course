@model PersonAndProductWrapperModel;
<!DOCTYPE html>
<html>
<head>
    <title>Person and Product</title>
    <meta charset="utf-8" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="page-content">
        <h1>Person and Product</h1>
        <div class="box w-100">
            <h3>Person</h3>
            <table class="table w-50">
                <tbody>
                    <tr>
                        <td>Person Name</td>
                        <td>@Model.personData.Name</td>
                    </tr>
                    <tr>
                        <td>Person Gender</td>
                        <td>@Model.personData.PersonGender</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="box w-100">
            <h3>Product</h3>
            <table class="table w-50">
                <tbody>
                    <tr>
                        <td>Product Id</td>
                        <td>@Model.productData.ProductId</td>
                    </tr>
                    <tr>
                        <td>Product Name</td>
                        <td>@Model.productData.ProductName</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>